<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamDlcShopping.Maui.Views.SteamLogInView"
			 HorizontalOptions="FillAndExpand"
			 VerticalOptions="FillAndExpand"
			 Background="#7F171A21">

	<Border Margin="32" StrokeThickness="0" Padding="32">
		<Border.StrokeShape>
			<RoundRectangle CornerRadius="4"/>
		</Border.StrokeShape>
		<Border.Background>
			<SolidColorBrush Color="#AF171A21"/>
		</Border.Background>

		<WebView x:Name="SteamLogInWebView" Navigating="SteamLogInWebView_Navigating" Navigated="SteamLogInWebView_Navigated" />

	</Border>
</ContentView>
